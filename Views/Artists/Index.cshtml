@model IEnumerable<MusicDotNet.Models.Artist>

@{
    ViewData["Title"] = "Artists";
}

<h1>Artists</h1>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create">Add Artist</a>

    }
</p>
<table class="table table-dark table-striped sortable">
    <thead>
        <tr>
            <th>
                <a href="#">Name</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genres)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genres)
            </td>
            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ArtistId">Edit</a><br />
                    <a asp-action="Details" asp-route-id="@item.ArtistId">Details</a><br />
                    <a asp-action="Delete" asp-route-id="@item.ArtistId">Delete</a>
                </td>
            }
            else
            {
                <td>
                    <a asp-action="Details" asp-route-id="@item.ArtistId">Details</a>
                </td>
            }

        </tr>
}
    </tbody>
</table>
